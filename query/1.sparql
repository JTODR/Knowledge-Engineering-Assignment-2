PREFIX osi: <http://ontologies.geohive.ie/osi#>
PREFIX geo: <http://www.opengis.net/ont/geosparql#>
PREFIX geof: <http://www.opengis.net/def/function/geosparql/>
PREFIX sf: <http://www.opengis.net/ont/sf#>

PREFIX trail: <http://www.this.com/ontologies/irish-trails-ontology#>

# Find the number of trails in current district.
#   Parameters:  current lat and long
#   Returns:     number of trails, districtName

SELECT ?districtName (count(?trailStartPoint) AS ?trailCount)
WHERE {
  ?district a osi:Municipal_District.
  ?district rdfs:label ?districtName.
  ?district geo:hasGeometry ?geom.
  ?geom geo:asWKT ?wkt.

  ?trail a trail:trail.
  ?trail trail:hasStartPoint ?trailStartPoint.
  ?trail trail:name ?trailName.

  # Get the current district. POINT(LONG, LAT)
  FILTER(geof:sfWithin("POINT(%PARAM_1% %PARAM_0%)"^^sf:wktLiteral, ?wkt) && geof:sfWithin(?trailStartPoint, ?wkt)).
}
